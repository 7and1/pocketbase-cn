[Unit]
Description=Litestream Replication (PocketBase.cn Staging)
After=network.target

[Service]
Type=simple
User=pocketbase
Group=pocketbase
EnvironmentFile=/opt/pocketbase-staging/.env
ExecStart=/usr/bin/litestream replicate -config /opt/pocketbase-staging/litestream.yml
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
